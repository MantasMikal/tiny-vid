{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tiny Vid",
  "version": "1.0.0",
  "identifier": "tiny-vid",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build:vite",
    "frontendDist": "../dist",
    "removeUnusedCommands": true
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Tiny Vid",
        "width": 900,
        "height": 670,
        "resizable": true,
        "maximizable": true,
        "decorations": true,
        "label": "main",
        "titleBarStyle": "Transparent",
        "backgroundColor": "#0a0a0a"
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "media-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'self' 'unsafe-inline'"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["$TEMP/**", "$HOME/**"]
      }
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [],
    "category": "Video",
    "shortDescription": "Compress and optimize video files",
    "longDescription": "Tiny Vid is a desktop app for compressing and optimizing video files with support for H.264, H.265, and AV1 codecs.",
    "fileAssociations": [
      {
        "ext": ["mp4", "mov", "webm", "mkv", "avi", "mpeg", "3gp", "flv", "ogg"],
        "name": "Video",
        "role": "Editor"
      }
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "files": {
        "Resources/Assets.car": "icons/Assets.car"
      },
      "infoPlist": "./Info.plist"
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
