{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "strictNullChecks": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts", "scripts/**/*.ts"]
}
