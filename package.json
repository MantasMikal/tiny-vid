{
  "name": "tiny-vid",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "main": "electron/main.mjs",
  "author": {
    "name": "Mantas Mikalauskas",
    "email": "mantas.codes@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MantasMikal/tiny-vid.git"
  },
  "homepage": "https://github.com/MantasMikal/tiny-vid#readme",
  "bugs": {
    "url": "https://github.com/MantasMikal/tiny-vid/issues"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "yarn tv dev --mode system",
    "dev:electron": "node scripts/electron/dev.ts",
    "dev:web": "vite",
    "tv": "node scripts/tv.ts",
    "electron:shell": "electron electron/main.mjs",
    "build": "yarn tv build --mode system",
    "build:electron": "node scripts/electron/build.ts --mode system",
    "build:electron:standalone": "yarn tv build --mode standalone --profile gpl",
    "build:electron:standalone:lgpl": "yarn tv build --mode standalone --profile lgpl-vt",
    "build:standalone": "yarn build:electron:standalone",
    "build:standalone:lgpl": "yarn build:electron:standalone:lgpl",
    "pack:electron": "electron-builder --publish never",
    "build:vite": "tsc && vite build",
    "preview": "vite preview",
    "icon": "yarn tv icon",
    "ffmpeg:prepare:gpl": "yarn tv ffmpeg prepare --profile gpl",
    "ffmpeg:prepare:lgpl": "yarn tv ffmpeg prepare --profile lgpl-vt",
    "ffmpeg:build:gpl": "yarn tv ffmpeg build --profile gpl",
    "ffmpeg:build:lgpl": "yarn tv ffmpeg build --profile lgpl-vt",
    "check": "yarn test:all && yarn lint && yarn lint:rust && yarn format:check && tsc --noEmit && tsc --noEmit -p tsconfig.node.json",
    "lint:rust": "cd native && cargo clippy",
    "lint:rust:fix": "cd native && cargo clippy --fix --allow-dirty --allow-staged",
    "test": "yarn test:unit",
    "test:unit": "yarn tv test --mode system --suite unit",
    "test:all": "yarn tv test --mode system --suite all",
    "test:all:standalone:gpl": "yarn tv test --mode standalone --profile gpl --suite all",
    "test:all:standalone:lgpl": "yarn tv test --mode standalone --profile lgpl-vt --suite all",
    "test:discovery": "yarn tv test --mode system --suite discovery",
    "test:matrix": "yarn tv test matrix",
    "clean:bundle": "yarn tv clean bundle",
    "lint": "eslint . --flag unstable_native_nodejs_ts_config",
    "lint:fix": "eslint . --fix --flag unstable_native_nodejs_ts_config",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "release": "release-it"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "motion": "^12.33.0",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-compare-slider": "^3.1.0",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@fiahfy/icns": "^0.0.7",
    "@release-it/bumper": "^7.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/json-merge-patch": "^1",
    "@types/node": "^24.10.11",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "commander": "^14.0.3",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-better-tailwindcss": "^4.1.1",
    "eslint-plugin-no-relative-import-paths": "^1.6.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.3",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.3.0",
    "json-merge-patch": "^1.0.2",
    "png-to-ico": "^3.0.1",
    "prettier": "^3.8.1",
    "release-it": "^19.2.4",
    "sharp": "^0.34.5",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "zx": "^8.8.5"
  },
  "build": {
    "appId": "tinyvid",
    "productName": "Tiny Vid",
    "compression": "maximum",
    "asar": true,
    "electronLanguages": [
      "en"
    ],
    "directories": {
      "output": "releases/electron"
    },
    "files": [
      "dist/**/*",
      "electron/main.mjs",
      "electron/preload.cjs",
      "package.json",
      "!**/node_modules/**"
    ],
    "extraResources": [
      {
        "from": "electron/resources/bin",
        "to": "bin",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "electron/icons/icon.icns",
      "extraResources": [
        {
          "from": "electron/resources/macos",
          "to": ".",
          "filter": [
            "Assets.car"
          ]
        }
      ],
      "category": "public.app-category.video",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "electron/icons/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "electron/icons/icon.png",
      "category": "AudioVideo",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "packageManager": "yarn@4.12.0"
}
